// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model Account {
  id        Int       @id @default(autoincrement())
  name      String    @db.VarChar(200)
  email     String    @unique @db.VarChar(50)
  password  String    @db.VarChar(255)
  branch    String    @db.VarChar(200)
  role      Role      @default(ADMIN)
  createdAt DateTime  @default(now()) @db.Timestamp(6)
  updatedAt DateTime  @updatedAt @db.Timestamp(6)
  Project   Project[]
}

model Project {
  id            Int             @id @default(autoincrement())
  project_name  String          @db.VarChar(50)
  description   String          @db.Text
  image         String          @db.VarChar(255)
  start_date    DateTime
  end_date      DateTime
  link          String          @db.VarChar(255)
  account_id    Int
  account       Account         @relation(fields: [account_id], references: [id])
  createdAt     DateTime        @default(now()) @db.Timestamp(6)
  updatedAt     DateTime        @updatedAt @db.Timestamp(6)
  Nisit_Project Nisit_Project[]
}

model Nisit {
  id            Int             @id @default(autoincrement())
  name          String          @db.VarChar(50)
  class         String          @db.VarChar(255)
  createdAt     DateTime        @default(now()) @db.Timestamp(6)
  updatedAt     DateTime        @updatedAt @db.Timestamp(6)
  Nisit_Project Nisit_Project[]
}

model Nisit_Project {
  student_id  Int
  project_id  Int
  certificate String   @db.VarChar(255)
  nisit       Nisit    @relation(fields: [student_id], references: [id])
  project     Project  @relation(fields: [project_id], references: [id])
  createdAt   DateTime @default(now()) @db.Timestamp(6)
  updatedAt   DateTime @updatedAt @db.Timestamp(6)

  @@unique([student_id, project_id])
}
